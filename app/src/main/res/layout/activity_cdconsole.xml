<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.jesspetersen.cquickreference.CDConsole"
    android:background="#f78686">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CONSOLE"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="552dp"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        android:src="@drawable/ConsoleScreenshot"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="The console is the first User Interface that a new C# developer encounters when they begin coding. It is used for testing, as well as learning and can be useful for many things. There are three main commands that we use with the Console while learning; WriteLine(), ReadLine(), ReadKey()."
        android:id="@+id/textView11"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@id/imageView"
        android:layout_alignStart="@id/imageView"
        android:textColor="#383838"
        android:textSize="17dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Console.WriteLine()"
        android:id="@+id/textView12"
        android:textColor="#383838"
        android:textSize="17dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/imageView"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Used for printing to the console and displaying messages to the user."
        android:id="@+id/textView13"
        android:textColor="#383838"
        android:textSize="17dp"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/textView12"
        android:layout_toRightOf="@+id/textView12"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Console.ReadLine()"
        android:id="@+id/textView14"
        android:textColor="#383838"
        android:textSize="17dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Used for reading input from the user. The user types in input and then presses enter."
        android:id="@+id/textView15"
        android:textColor="#383838"
        android:textSize="17dp"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Console.ReadKey()"
        android:id="@+id/textView16"
        android:textColor="#383838"
        android:textSize="17dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Used at the end of a program to prevent the console window from closing immediately. Press any key to exit."
        android:id="@+id/textView17"
        android:textColor="#383838"
        android:textSize="17dp"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

</RelativeLayout>
