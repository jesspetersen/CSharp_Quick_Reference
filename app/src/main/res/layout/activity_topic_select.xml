<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.jesspetersen.cquickreference.TopicSelect"
    android:background="#f78686">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="C# QUICK REFERENCE"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Concepts &amp; Definitions"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_marginTop="58dp"
        android:background="#6aa7f8"
        android:clickable="true"
        android:enabled="true"
        android:padding="15dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textSize="17dp"
        android:onClick="ChangeViewCDSelect" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Examples"
        android:id="@+id/button2"
        android:layout_marginTop="46dp"
        android:background="#6aa7f8"
        android:clickable="true"
        android:enabled="true"
        android:padding="15dp"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:textSize="17dp"
        android:onClick="ChangeViewExampleSelect" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guide"
        android:id="@+id/button3"
        android:layout_marginTop="41dp"
        android:background="#6aa7f8"
        android:clickable="true"
        android:enabled="true"
        android:padding="15dp"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:textSize="17dp"
        android:onClick="ChangeViewGuideSelect" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/button4"
        android:background="#6aa7f8"
        android:clickable="true"
        android:enabled="true"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginBottom="39dp"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:textSize="17dp"
        android:onClick="ChangeViewAbout" />

</RelativeLayout>
